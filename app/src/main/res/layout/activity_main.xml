<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/purchaseprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase Price:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/downpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down payment:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/mortgageterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mortgage Term:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="years"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/interestrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Rate:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/propertytax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Tax:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="$ per year"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/propertyinsurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Insurance:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="$ per year"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/pmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PMI"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/suffix7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#000000" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip Code:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/value8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:ems="10"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/firstpaymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Payment Date:"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Calculate" />
    </TableRow>
</TableLayout>